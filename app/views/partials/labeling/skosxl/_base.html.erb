<%= content_tag("div", { :class => "relation translation", :lang => defined?(concept) ? lang || nil : nil }, true) do %>
  <%- if defined?(concept) -%>
    <h4><%= klass.model_name.human(:count => 2) %> (<%= lang %>)</h4>
    <div class="relation-body">
      <%= raw association_listing(
        concept.labels_for_labeling_class_and_language(klass, lang.to_s)
      ) { |label|
        link_to label.value, label_path(:id => label)
      }
    %>
    </div>
  <%- elsif defined?(label) -%>
    <h4><%= klass.model_name.human %> <%= t("txt.common.of") %></h4>
    <div class="relation">
      <%= raw association_listing(
        label.concepts_for_labeling_class(klass)
      ) { |c|
        link_to c.origin, concept_path(:id => c)
      }
    %>
    </div>
  <%- end -%>
<%- end -%>
